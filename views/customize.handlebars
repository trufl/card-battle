<section class="min-h-screen w-screen bg-indigo-700 relative pb-28 pt-32">
  <a href="/userDeck">
<button id="submit-btn" class="font-press-start font-extrabold text-3xl ml-10"> Current Deck</button>
</a>

  <section class="p-10 border-4 border-black bg-orange-600 h-fit">
    <h3 class="text-center text-white font-press-start font-extrabold text-3xl pt-4"> Select cards</h3>


    <div class="flex items-center justify-center w-full h-full py-24 sm:py-8 px-4 ">

      <div class="w-full relative flex items-center justify-center">
        <button aria-label="slide backward"
          class="absolute z-30 left-0 ml-10 focus:outline-none focus:bg-gray-400 focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 cursor-pointer"
          id="prev">
          <svg class="dark:text-gray-900" width="16" height="22" viewBox="0 0 8 14" fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path d="M7 1L1 7L7 13" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </button>
        <div class="w-4/5 h-full mx-auto overflow-x-hidden overflow-y-hidden" data-carousel="slide">
          <div id="slider"
            class="h-full w-full flex gap-8 items-center justify-center transition-all ease-out duration-1000 ">
            {{#each cards}}
            
            <div class="flex flex-shrink-0 relative w-60 min-width-full sm:w-auto h-72">
              <!-- need to set defense and strength to card id-->
              <img class="card-img" data-id="{{id}}" data-defense="{{'cards.defenseStat'}}" data-strength="{{'cards.attackStat'}}"  src="/images/cardBattle/{{filename}}">

            </div>
            {{/each}}
          </div>

        </div>
        <button aria-label="slide forward"
          class="absolute z-30 right-0 mr-10 focus:outline-none focus:bg-gray-400 focus:ring-2 focus:ring-offset-2 focus:ring-black"
          id="next">
          <svg class="dark:text-gray-900" width="16" height="22" viewBox="0 0 8 14" fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path d="M1 1L7 7L1 13" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </button>
  
      </div>
    </div>
  </section>
<button id="submit-btn" class="btn-game hide-button"> Confirm Deck</button>
</section>



<script src="/js/customize.js"> </script>
<script src="/js/card-picker.js"></script>
<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">

